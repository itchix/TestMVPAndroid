<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:isScrollContainer="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:clipToPadding="false"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/image_view_ingredients"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
            android:background="?android:selectableItemBackground"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:maxHeight="250dp" />

        <TextView
            android:id="@+id/add_photo_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/take_picture_ingredients"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_ingredient_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_substance_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_trace_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_additive_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_palm_oil_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/text_may_be_from_palm_oil_product"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:background="@drawable/textview_full"
            android:padding="@dimen/spacing_small"
            android:textIsSelectable="true"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
