<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/img_stats"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/spacing_normal"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_stats"
        android:layout_alignTop="@+id/img_stats"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_toRightOf="@id/img_stats"
        android:textSize="@dimen/font_large"
        android:id="@+id/name_description"
        tools:text="History stats name with.." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/font_large"
        android:id="@+id/stats_count"
        tools:text="42"
        android:layout_alignBottom="@+id/name_description"
        android:layout_alignTop="@+id/name_description"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_toRightOf="@id/name_description"/>

</RelativeLayout>